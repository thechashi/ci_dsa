   "source": [
    "# Factorial - a simple recursion\n",
    "\n",
    "n! = n*(n-1)! if n > 0 else 1"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 8,
   "id": "c41d7474",
   "metadata": {},
   "outputs": [],
   "source": [
    "def factorial(n):\n",
    "    print(\"I am calculating F({0})\".format(n))\n",
    "    if n == 0:\n",
    "        return 1\n",
    "    F = n*factorial(n-1)\n",
    "    print(\"Done! F{0} == {1}\".format(n, F))\n",
    "    return F"
   ]
  },
